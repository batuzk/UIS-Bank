import java.util.*;
import java.lang.Math;

public class Main {
    private static Scanner input = new Scanner(System.in);

    public static void main(String[] args) {
        String name;
        String surname;
        double balance;
        
        balance = 0;
        double cbalance;
        double deposit;
        double withdraw;
        String eOJ;
        
        eOJ = "1";
        System.out.println("Name?");
        name = input.nextLine();
        System.out.println("Surname?");
        surname = input.nextLine();
        System.out.println("Welcome " + name + "!");
        System.out.println("Balance: $" + balance);
        while (!eOJ.equals("2")) {
            System.out.println(" What would you like to do?");
            System.out.println("(1) = Deposit Money");
            System.out.println("(2) = Withdraw Money");
            eOJ = input.nextLine();
            if (eOJ.equals("1")) {
                System.out.println("How much would you like to deposit in cash?");
                deposit = input.nextDouble();
                deposit = deposit;
                System.out.println("The amount is: $" + deposit);
                System.out.println("(1) Do you want to countinue to deposit?");
                System.out.println("(2) Cancel.");
                eOJ = input.nextLine();
                if (eOJ.equals("1")) {
                    System.out.println("$" + deposit + " deposited successfully!");
                    cbalance = balance + deposit;
                    balance = cbalance;
                    System.out.println("Current balance: $" + cbalance);
                    System.out.println("Would you like to do anything else?");
                    System.out.println("(1) Yes.");
                    System.out.println("(2) No.");
                    eOJ = input.nextLine();
                }
            } else {
                System.out.println("How much would you like to withdraw money?");
                withdraw = input.nextDouble();
                if (withdraw > balance) {
                    System.out.println("We can not process this transaction. Would you like to do anything else?");
                    System.out.println("(1) Yes.");
                    System.out.println("(2) No.");
                    eOJ = input.nextLine();
                } else {
                    System.out.println("The amount is: $" + withdraw);
                    System.out.println("(1) Do you want to countinue to withdraw?");
                    System.out.println("(2) Cancel.");
                    eOJ = input.nextLine();
                    if (eOJ.equals("1")) {
                        System.out.println("$" + withdraw + " withdraw is successful!");
                        cbalance = cbalance - withdraw;
                        balance = cbalance;
                        System.out.println("Current balance: $" + cbalance);
                        System.out.println("Would you like to do anything else?");
                        System.out.println("(1) Yes.");
                        System.out.println("(2) No.");
                        eOJ = input.nextLine();
                    }
                }
            }
        }
        System.out.println("Thank you " + name + " " + surname + "!");
        System.out.println("Current balance: $" + balance);
    }
}
